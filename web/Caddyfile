# Caddyfile - THE FINAL, SIMPLIFIED & CORRECT VERSION

intelvis.ai {
    # Send traffic for the main domain to the frontend.
    reverse_proxy frontend:3000
}

api.intelvis.ai {
    # Send ALL traffic for the api subdomain directly to the backend.
    # No rewrites, no path matching. Clean and simple.
    reverse_proxy backend:3001
}